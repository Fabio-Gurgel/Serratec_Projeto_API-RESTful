package org.br.serratec.service;

import org.br.serratec.domain.Pedido;
import org.br.serratec.dto.PedidoInserirDto;
import org.br.serratec.dto.EnderecoDto;
import org.springframework.stereotype.Service;

@Service
public class PedidoService {
	public Pedido salvar(PedidoInserirDto pedidoInserir) {
		EnderecoDto enderecoDto = enderecoService.buscar(pedidoInserir.getCep());
		Pedido pedido = new Pedido(
					pedidoInserir, enderecoDto
				);
		pedido = pedidoRepository.save(pedido);
		return pedido;
		
	}
}
